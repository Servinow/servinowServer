{% extends 'ServinowMovimientosDeCajaBundle::Movimientos/base.html.twig' %}

{% block central_movimientos_caja_movimientos %}
<table id="movimientos">
    <thead>
        <tr>
            <th>Pedido</th>
            <th>Mesa</th>
            <th>Número de Productos</th>
            <th>Método de Pago</th>
            <th>Precio Total</th>
        </tr>
    </thead>
    <tbody>
        {% for pedido in pedidos %}
            <tr>
                <td>{{pedido.id}}</td>
                <td>{{pedido.mesa}}</td>
                <td>{{pedido.productos}}</td>
                <td>{{pedido.metodoPago}}</td>
                <td>{{pedido.total}}</td>
            </tr>
        {% endfor %}
    </tbody>
</table>​

<h1>Balance: {{balance.total}}</h1>
{% endblock %}