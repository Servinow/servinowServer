{% extends 'ServinowNavigationBundle:Navigation:index.html.twig' %}

{% block stylesheets %}
<link rel="stylesheet" type="text/css" href="{{ asset('bundles/servinowplatos/css/pantallaPlatos.css') }}">
{% endblock %}

{% block content %}

<h2>Nuevo plato</h2>

<form method="post" action="{{ path('servinow_platos_homepage_decidir', {'restaurantID': 1 }) }}">
    <table>
        <tbody>
            <tr>
                <td>Nombre<br/><input type="text" name="nombre" required="required" placeholder="Nombre del plato" maxlength="30"/></td>
                <td></td>
                <td>Imagen<br/><input type="file"/></td>
            </tr>
            <tr>
                <td>Descripción<br/><textarea rows="4" cols="20" name="descripcion" required="required" placeholder="Descripción del plato" maxlength="500"></textarea></td>
                <td></td>
                <td>Categorías<br/>
                    <div class="categorias">
                    {% for categoria in categorias %}
                        <input type="checkbox" name="categorias[]" value="{{categoria.id}}" />{{categoria.nombre}}<br />
                    {% endfor %}
                    </div>
                </td>
            </tr>
            <tr>
                <td>Precio<br/><input type="number" name="precio" required="required" placeholder="X,YZ" min="0.00" max="9999.99" step="0.01" maxlength="8"/> €</td>
                <td></td>
                <td><input type="checkbox" name="disponible"/>Disponible<br /></td>
            </tr>
            <tr>
                <td></td>
                <td></td>
                <td style="text-align: right">
                    <button type=submit name="action" value="aceptarNuevo">Aceptar</button>
                    <button type=submit name="action" value="descartarNuevo">Descartar</button>
                </td>
            </tr>
        </tbody>
    </table>
</form>

{% endblock %}


